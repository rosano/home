{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">

<channel>

{{ .Scratch.Set "kIsHeadTitle" "true" -}}
<title>{{ if not .IsHome }}{{ site.Title }} / {{ end }}{{ partial "page-title.html" . }}</title>
{{- .Scratch.Delete "kIsHeadTitle" }}

<link>{{ .Permalink }}</link>

<generator>Hugo -- gohugo.io</generator>

<language>{{ site.Language.LanguageCode }}</language>

{{ if not .Date.IsZero -}}
<lastBuildDate>{{ time.Now.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>
{{- end }}

{{ with .OutputFormats.Get "RSS" -}}
{{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
{{- end }}

{{- $pageContext := cond .IsHome site . -}}
{{- $pages := (cond (or $.IsHome $.IsSection) $pageContext.RegularPages $pageContext.Pages).ByDate.Reverse -}}

{{- $limit := site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
  {{- $pages = $pages | first $limit -}}
{{- end -}}

{{- .Scratch.Set "rss-pages" $pages -}}

{{- block "main" . -}}{{- end -}}

</channel>

</rss>
